{
	"include": [
		".react-router/types/**/*",
		"app/**/*",
		"app/**/.server/**/*",
		"app/**/.client/**/*",
		"scripts/**/*",
		"worker-configuration.d.ts",
		"react-router.config.ts",
		"tailwind.config.ts",
		"vite.config.ts",
		"react-router.config.ts"
	],
	"compilerOptions": {
		"checkJs": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"composite": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vite/client", "bun"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"rootDirs": [".", "./.react-router/types"],
		"paths": {
			"~/*": ["./app/*"]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}
